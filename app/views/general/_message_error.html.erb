<div class="ui negative message transition">
    <i class="close icon"></i>
    <div class="header">Error!</div>
    <p>Por favor, revisa los datos</p>
    <ul class="list">
        <% locals[:object].errors.messages.each do |attr, msg| %>
            <% msg.each do |value| %>
                <li><%= value %></li>
            <% end %>
        <% end %>
    </ul>
</div>
