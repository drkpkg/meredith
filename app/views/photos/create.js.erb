<% if !@photo.errors.blank? %>
$("#message-box").empty();
$("#message-box").append("<%= j render 'general/message_error', locals: {object: @photo} %>");
<% else %>
$("#gallery").empty().append("<%= j render 'photos/index', locals:{id: @user_id, event_id: @event_id} %>");
$('.pup').popup();
$("#load-messages").empty();
$("#initial-message").remove();
<% end %>

$('.message .transition').on('click', function() {
    $(this).closest('.message').transition('fade');
});

$('.message.transition').on('click', function() {
    return $(this).closest('.message').transition('fade');
});