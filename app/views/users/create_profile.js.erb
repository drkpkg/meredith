$("#message").empty();
<% if !@user.errors.blank? %>
    $("#message").append("<%= j render 'general/message_error', locals: { object: @user } %>");
    $('.message .close').on('click', function() {
        $(this).closest('.message').transition('fade');
    });
<% else %>
    window.location.href = "<%= root_path %>";
<% end %>